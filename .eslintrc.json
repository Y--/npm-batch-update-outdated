{
  "plugins": ["stoic", "prettier"],
  "extends": ["plugin:stoic/recommended"],
  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "require-await": 0,
    "prettier/prettier": "error",
    "no-console": 0,
    "object-shorthand": "error"
  }
}
